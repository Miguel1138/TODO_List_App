<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.miguelsantos.todewit.ui.fragments.HomeFragment"
        android:label="@string/label_daily_task"
        app:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.miguelsantos.todewit.ui.fragments.AddTaskFragment"
        android:label="@string/label_create_task"
        app:layout="@layout/fragment_add_task">

        <action
            android:id="@+id/action_addTaskFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>