<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.ToDewIt.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Widget.ToDewIt.InputText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.ToDewIt.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="Widget.ToDewIt.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.ToDewIt.Button</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>